{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": [
      "@repo/i18n/i18n.d.ts"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@repo/i18n/*": [
        "../../packages/i18n/src/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "i18n-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}