{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:build\" \"pnpm dev:run\"",
    "dev:build": "swc src -d dist --watch --copy-files",
    "dev:run": "node --watch dist/main.js",
    "build": "swc src -d dist --copy-files",
    "typecheck": "tsc --noEmit",
    "start": "node dist/main.js",
    "start:debug": "node --inspect dist/main.js",
    "start:prod": "node dist/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^11.2.4",
    "@prisma/adapter-pg": "^7.1.0",
    "@repo/constants": "workspace:*",
    "@repo/contracts": "workspace:*",
    "@repo/database": "workspace:*",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "nestjs-zod": "^5.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.3",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.0",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}