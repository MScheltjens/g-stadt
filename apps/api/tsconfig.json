{
  "extends": "@invicity/typescript-config/nestjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": false,
    "paths": {
      "@api/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/main.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}