{
  "extends": "@invicity/typescript-config/nestjs",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": false,
    "paths": {
      "@api/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}