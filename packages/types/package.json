{
    "name": "@repo/types",
    "version": "0.0.0",
    "private": true,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prebuild": "node -e \"const fs=require('fs');const stub='src/generated/index.stub.ts';const target='src/generated/index.ts';if(!fs.existsSync(target)){fs.copyFileSync(stub,target);console.log('Created stub index.ts');}\"",
        "build": "tsc -b",
        "fix:generated": "node -e \"const fs=require('fs');const file='src/generated/index.ts';let content=fs.readFileSync(file,'utf8');content=content.replace(/z\\.uuid\\(\\)/g,'z.string().uuid()');fs.writeFileSync(file,content);\""
    },
    "devDependencies": {
        "@repo/database": "workspace:*",
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./user": {
            "import": "./dist/user.schema.js",
            "require": "./dist/user.schema.js",
            "types": "./dist/user.schema.d.ts"
        }
    },
    "dependencies": {
        "@prisma/client": "^7.1.0",
        "zod": "^3.25.76"
    }
}