{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "JWT_SECRET",
    "JWT_REFRESH_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "@repo/types#build": {
      "cache": false,
      "dependsOn": [
        "@repo/database#build"
      ],
      "outputs": [
        "dist/**",
        "src/generated/**"
      ]
    },
    "@repo/database#build": {
      "cache": false,
      "outputs": [
        "dist/**",
        "../types/src/generated/**"
      ]
    },
    "lint": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}