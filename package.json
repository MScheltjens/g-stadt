{
  "name": "invicity",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean:packages": "pnpm -r clean",
    "clean:root": "npx rimraf node_modules pnpm-lock.yaml .turbo .cache || exit 0",
    "clean": "pnpm clean:packages && pnpm clean:root",
    "reinstall": "pnpm clean && pnpm -r exec -- rm -rf node_modules && pnpm install",
    "db:seed": "turbo run db:seed",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "@invicity/eslint-config": "workspace:*",
    "@invicity/typescript-config": "workspace:*",
    "@jest/types": "^30.2.0",
    "@types/jest": "^29.5.6",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "lint-staged": "^14.0.0",
    "next": "16.0.10",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "prettier --write",
      "pnpm -w exec eslint --fix --cache --cache-location .cache/eslint --"
    ]
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    }
  }
}